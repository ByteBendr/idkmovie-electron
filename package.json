{
  "name": "idkmovie",
  "version": "1.0.0",
  "description": "IDKMovie - when you don't know what to watch",
  "main": "main.js",
  "license": "MIT",
  "author": "",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.lucian.idkmovie",
    "productName": "IDKMovie",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
     "icon": "assets/icon.ico",
     "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
